<h2>Login as Admin</h2>
<%= form_tag('/admins/login') do %>
  <%= label_tag :username %>
  <%= text_field_tag :username %>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <%= submit_tag "Login" %>
<% end %>
<div class="error">
  <%= flash[:notice] %>
</div>
<script>
  $('.error').fadeOut( 4000 );
</script>